{
    "workbench.colorTheme": "Visual Studio 2017 Dark - C++",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "files.autoSave": "onFocusChange",
    "window.openFilesInNewWindow": "on",
    "workbench.editor.revealIfOpen": true,
    
    "debug.onTaskErrors": "showErrors",

    "editor.bracketPairColorization.enabled": true,
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#cfcfcf",
        "editorBracketHighlight.foreground2": "#cfcfcf",
        "editorBracketHighlight.foreground3": "#b8b8b8",
    },
    "editor.fontWeight": "1","editor.fontSize": 14,
    "editor.tokenColorCustomizations": {
        "comments": "#Cd9c74",
  
        "textMateRules": [
            {
              "scope": "variable.parameter.cpp",
              "settings": {
                "fontStyle": "",
                "foreground": "#bdbdbd"
              }
            }
          ] 
        
    },
    "editor.fontVariations": false,
    "editor.fontLigatures": false,
    "editor.fontFamily": "Consolas,'Courier New', monospace",
    "editor.minimap.enabled": false,
    //"editor.semanticHighlighting.enabled": false,
    

    //cmake
    "cmake.showOptionsMovedNotification": false,
    "cmake.showConfigureWithDebuggerNotification": false,
    //"C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    //"C_Cpp.default.intelliSenseMode": "windows-msvc-x64",
    "git.enabled": false,
    "cmake.debugConfig": {
      "console":"newExternalWindow"
    },
    "cmake.pinnedCommands": [
      "cmake.selectKit",
      "workbench.action.tasks.configureTaskRunner",
      "workbench.action.tasks.runTask"
    ],
    "cmake.buildDirectory":"${workspaceFolder}/build",
    "cmake.options.statusBarVisibility": "compact",
    "cmake.configureOnOpen": false,
    "material-icon-theme.folders.color": "#42a5f5",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.activeIconPack": "nest",
    "material-icon-theme.saturation": 1,
    "material-icon-theme.hidesExplorerArrows": false,
    "extensions.ignoreRecommendations": true,
    "cmake.showNotAllDocumentsSavedQuestion": false,
    "workbench.settings.applyToAllProfiles": [
      "output.smartScroll.enabled"
    ],
    "hexeditor.columnWidth": 16,
    "hexeditor.showDecodedText": false,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.inspectorType": "aside",
    "workbench.editor.enablePreview": false,
    "workbench.editorAssociations": {
      "*.exe": "default"
    },
    "workbench.startupEditor": "none",
    "[cpp]": {
      "editor.defaultFormatter": "xaver.clang-format"
    },
    "cmake.additionalCompilerSearchDirs": [
      "C:/msys64/mingw32/bin",
      "C:/msys64/clang32/bin",
      "C:/msys64/clang64/bin",
      "C:/msys64/clangarm64/bin"
    ],
    "explorer.confirmPasteNative": false,
    "cmake.languageSupport.enableFileAPI": true,
    "workbench.iconTheme": "material-icon-theme"

